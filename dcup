#!/bin/bash

# ğŸ“ Resolve absolute path to script directory (even if symlinked)
# Get the source of the script: BASH_SOURCE[0] if available, else fallback to $0
SOURCE="${BASH_SOURCE[0]:-$0}"

# Follow symlinks until we reach the real file
while [ -h "$SOURCE" ]; do
  # Get the directory that contains the symlink
  DIR="$(cd -P "$(dirname "$SOURCE")" >/dev/null 2>&1 && pwd)"
  # Resolve the symlink target
  SOURCE="$(readlink "$SOURCE")"
  # If the resolved path is relative, prepend the directory to make it absolute
  [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
REPO_DIR="$(cd -P "$(dirname "$SOURCE")" >/dev/null 2>&1 && pwd)"  # Final resolved script location

# ğŸ”— Load helper functions (e.g. _parse_args, _validate_shell, _find_latest_container)
source "${REPO_DIR}/helpers.sh"

# ğŸ”— Load .env for Docker-related environment variables (e.g. IMAGE_PREFIX, DOCKERHUB_NAMESPACE)
if [[ -f "${REPO_DIR}/.env" ]]; then
  # All variables now availble here
  source "${REPO_DIR}/.env"
else
  echo "âŒ Missing .env file at ${REPO_DIR}/.env"
  exit 1
fi


#############################################
# ğŸ”§ Run persistent container for a project #
#############################################

# ğŸ”§ Parse arguments passed to script (e.g. service, tag, shell, project, --port)
# This sets:
#   - SERVICE           â†’ e.g. node
#   - IMAGE_TAG         â†’ e.g. latest or v0.01
#   - REQUESTED_SHELL   â†’ zsh, bash, sh
#   - PROJECT_NAME      â†’ optional override for docker-compose project name
#   - USER_PORTS        â†’ array of any --port mappings
_parse_args "$@" || exit $?

# ğŸ— Construct full image tag, e.g. javierfraga/utilcntr-node:latest
image="${DOCKERHUB_NAMESPACE}/${IMAGE_PREFIX}-${SERVICE}:${IMAGE_TAG}"

# ğŸŒ Export image name for use in docker-compose.yaml as ${FULL_IMAGE_TAG}
export FULL_IMAGE_TAG="${image}"  # ğŸ‘ˆ Injects into Compose as environment variable

# ğŸ“› Determine Compose project name. Use PROJECT_NAME if set, otherwise fallback to current directory name.
project="${PROJECT_NAME:-$(basename "$PWD")}"

# ğŸŒŸ Auto-detect preferred shell from image (zsh > bash > sh), if one wasn't explicitly provided
_select_preferred_shell "$image" "$REQUESTED_SHELL" || exit 1

# ğŸ“¦ Handle dynamic port overrides (e.g., --port 3000:80 --port 9229:9229)
if [[ "${#USER_PORTS[@]}" -gt 0 ]]; then
  # Join the array into a comma-separated string for Compose (e.g., 3000:80,9229:9229)
  # IFS (internal field separator) temporarily set to comma
  PORT_MAPPINGS=$(IFS=, ; echo "${USER_PORTS[*]}")
  export PORT_MAPPINGS  # Used inside docker-compose.yaml
  echo "ğŸ’¡ Overriding ports for service '$SERVICE':"
  for p in "${USER_PORTS[@]}"; do
    echo "  - $p"
  done
fi

# ğŸ—‚ Set the current host working directory to mount into container at runtime
export HOST_WORKDIR="$(pwd)"

# ğŸ§± Run the container with Docker Compose
echo "ğŸ”§ Starting: $image (project: $project)"
echo "ğŸ”§ Starting: In this location: $HOST_WORKDIR"

# ğŸ³ Init container using docker compose up (persistent)
#  --file "${REPO_DIR}/docker-compose.yaml" :   # Use your custom Compose file
#  --project-name "$project" :  # Set custom project name (so container is prefixed)
#  --detach :  # Run in background
#  "${SERVICE}" :  # Only run this service
docker compose \
  --file "${REPO_DIR}/docker-compose.yaml" \
  --project-name "$project" \
  up \
  --detach \
  "${SERVICE}"

# ğŸ” Find the name of the most recent container started for this service
container=$(_find_latest_container "$SERVICE") || exit 1

# ğŸ›  Attach an interactive shell to the container after it's started
  # --interactive :                   # Keep STDIN open
  # --tty :                           # Allocate a TTY (for shell)
  # "$container" "$REQUESTED_SHELL" : # Run container with chosen shell
echo "ğŸ›   Attaching to container: $container"
docker exec \
  --interactive \
  --tty \
  "$container" "$REQUESTED_SHELL"

